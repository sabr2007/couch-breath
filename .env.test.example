# Пример конфигурации для тестовой среды
# Скопируйте этот файл в .env.test и настройте значения

# === Telegram ===
BOT_TOKEN=test_token_not_used_in_tests
CURATOR_ID=123456789
ADMIN_IDS=123456789

# === Database ===
# Тестовая БД (PostgreSQL рекомендуется)
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/couch_breath_test

# Для SQLite (не рекомендуется, некоторые тесты могут не работать)
# TEST_DATABASE_URL=sqlite:///test.db

# === OpenAI ===
OPENAI_API_KEY=test_key_not_used_in_tests

# === Settings ===
TIMEZONE=UTC
TOTAL_LESSONS=18
